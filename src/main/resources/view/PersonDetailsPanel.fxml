<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<VBox id="personDetailsPane" fx:id="personDetailsPane"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      styleClass="details-card"
      alignment="CENTER_LEFT" minHeight="55" HBox.hgrow="ALWAYS">
    <padding>
        <Insets top="5" right="5" bottom="5" left="15"/>
    </padding>
    <VBox>
        <HBox spacing="10" alignment="CENTER_LEFT" >
            <Label fx:id="name" styleClass="medium-label" text="\$first" />
            <padding>
                <Insets top="15"  bottom="15"/>
            </padding>
        </HBox>
        <FlowPane fx:id="tags"/>
        <Label fx:id="phone" styleClass="small-label" text="\$phone">
            <padding>
                <Insets top="5"  bottom="5"/>
            </padding>
        </Label>
        <Label fx:id="email" styleClass="small-label" text="\$email">
            <padding>
                <Insets top="5"  bottom="5"/>
            </padding>
        </Label>
        <Label fx:id="housingType" styleClass="small-label" text="\$housingType">
            <padding>
                <Insets top="5"  bottom="5"/>
            </padding>
        </Label>
        <Label fx:id="budget" styleClass="small-label" text="\$budget">
            <padding>
                <Insets top="5"  bottom="5"/>
            </padding>
        </Label>
    </VBox>
    <VBox fx:id="houseList" VBox.vgrow="ALWAYS">
        <StackPane fx:id="houseListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>



